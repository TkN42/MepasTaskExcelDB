@model TaskExcelDB.Models.Categories

<h1>Categori Sil</h1>

<div>
    <h4>Categori Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.id</dd>
        <dt class="col-sm-2">Adı</dt>
        <dd class="col-sm-10">@Model.name</dd>
    </dl>
</div>

<form asp-controller="Categories" asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <input type="submit" value="Sil" class="btn btn-danger" />
    </div>
</form>

<a asp-controller="Categories" asp-action="Index">Geri dön</a>
